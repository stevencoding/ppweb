@import "globals/variables";
@import "globals/mixins";

body {
  color: #4d4d4d;
  font-family: "PT Serif",Georgia,Times,"Times New Roman","Songti SC","Hiragino Mincho ProN",serif;
  font-size: 100%;
  margin: 0;
  background: #FBF6F6 url(<%= asset_path 'bg.jpg' %>) ;
}

ul {
  margin: 0;
  padding: 0;
  border: 0;
}
ul li {
  list-style: none;
}

a {
  color: $brand-green;
  text-decoration: none;
  &:hover {
    text-decoration: none;
  }
}

h1, h2, h3, h4{
  font-weight: normal;
  margin: 0;
}
pre {
  display: block;
  padding: 9.5px;
  margin: 0 0 10px;
  font-size: 13px;
  line-height: 20px;
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre;
  white-space: pre-wrap;
  background-color: whiteSmoke;
  border: 1px solid #CCC;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  code {
    margin: 0;
    border: 0;
    padding: 0;
  }
}

code {
  margin: 0 2px;
  padding: 0 5px;
  border: 1px solid #EAEAEA;
  background-color: #F8F8F8;
}

hr {
  clear: both;
}


.clearfix {
  *zoom: 1;
}
.clearfix:before, .clearfix:after {
  display: table;
  content: "";
  line-height: 0;
}
.clearfix:after {
  clear: both;
}

.container {
  width: 1200px;
  margin: 0 auto;
}
