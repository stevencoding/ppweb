@import "globals/variables";
@import "globals/mixins";

html, body { height: 100%; }

body {
  color: #4d4d4d;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 100%;
  margin: 0;
  background: #FBF6F6 url(<%= asset_path 'bg.jpg' %>) ;
}

ul {
  margin: 0;
  padding: 0;
  border: 0;
}
ul li {
  list-style: none;
}

a {
  color: $brand-green;
  text-decoration: none;
  &:hover {
    text-decoration: none;
    color: darken($brand-green, 10%);
  }
}

a img {
  border: none;
}

h1, h2, h3, h4{
  font-weight: normal;
  margin: 0;
}
pre {
  display: block;
  padding: 9.5px;
  margin: 0 0 10px;
  font-size: 13px;
  line-height: 20px;
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre;
  white-space: pre-wrap;
  background-color: whiteSmoke;
  border: 1px solid #CCC;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  code {
    margin: 0;
    border: 0;
    padding: 0;
  }
}

code {
  margin: 0 2px;
  padding: 0 5px;
  border: 1px solid #EAEAEA;
  background-color: #F8F8F8;
}

hr {
  clear: both;
}


.clearfix {
  *zoom: 1;
}
.clearfix:before, .clearfix:after {
  display: table;
  content: "";
  line-height: 0;
}
.clearfix:after {
  clear: both;
}

.container {
  width: 980px;
  margin: 0 auto;
}
.section-header {
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  font-size: 30px;
  height: 200px;
  padding: 0;
  &:before {
    @include mask-image(200px, 0);
  }
  h1 {
    padding-top: 50px;
  }
  a {
    color: white;
    &:hover {
      color: white;
    }
  }
  .section-header-slogan {
    position: absolute;
    width: 100%;
    height: 100%;
    color: rgba(255, 255, 255, 0.7);
    text-align: center;
    font-size: 30px;
  }
}
