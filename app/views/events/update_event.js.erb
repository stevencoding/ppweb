<% if @event.errors[@field].any? %>
  $('.feedback-msg').hide();
  $(".<%= @field %>-action").after("<div class='feedback-msg error'><%= @event.errors[@field][0] %></div>");
<% else %>
  $(".<%= @field %>-area").hide();
  $(".<%= @field %>-info").html("<%= eval('@event.' + @field) %>").show();
  $('.feedback-msg').hide();
  $(".<%= @field %>-action").after("<div class='feedback-msg success'><%= t("settings.successfully_updated") %></div>").show();
<% end %>
