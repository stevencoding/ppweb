<li class="share-list" data-title="<%= h title %>" data-img="<%= opts[:image] %>" data-url="<%= opts[:url] %>">
  <% %w(weibo tqq).each do |name| %>
    <%= link_to '', { "data-site" => name, class: "share-item #{name}", onclick: "return SocialShareButton.share(this);" } do %>
      <%= t "share_button.share_to", name: t("share_button.#{name.downcase}") %>
    <% end %>
  <% end %>
</li>
