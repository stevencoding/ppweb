<div class="title-wrap">
  <div class="label red">
    <%= t("event.my_event") %>
  </div>
</div>
<ul class="event-list">
  <% user.events.each do |e| %>
  <li class="event-item">
    <div class="event-card">
      <h3 class="event-title">
        <%= link_to e.title, "/event/#{e.uid}" %>
      </h3>
      <div class="event-details">
        <p><%= e.title %></p>
        <div class="event-time">
          <i class="fa fa-calendar"></i>
          <% if cookies[:locale] == "en" %>
            <%= e.start_at.strftime("%l:%M %P %b %-d, %Y") %>
          <% else %>
            <% p = "datetime." + "#{e.start_at.strftime("%P")}" %>
            <%= e.start_at.strftime("%-m月%-d日 #{t("#{p}")}%l:%M") %>
          <% end %>
        </div>
        <div class="event-members">
          <i class="class fa fa-user"></i>
          <%= e.members.size %> <%= t("event.member_count") %>
        </div>
      </div>
    </div>
  </li>
  <% end %>
</ul>
<% if user.events.blank? %>
  <div class="message">
    <i class="fa fa-frown-o"></i>
    <%= t("event.no_event") %>
  </div>
<% end %>