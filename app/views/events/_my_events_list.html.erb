<div class="title-wrap">
  <div class="label red">
    <%= t("event.my_event") %>
  </div>
</div>
<ul class="event-list">
  <% user.events.each do |e| %>
  <li class="event-item">
    <div class="event-card">
      <h3 class="event-title">
        <%= link_to e.title, "/event/#{e.uid}" %>
        <% if owner?(e) %>
          <%= link_to edit_event_path(e.uid), class: "edit-event-icon" do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        <% end %>
      </h3>
      <div class="event-card-details">
        <p><%= e.description %></p>
        <div class="event-time">
          <i class="fa fa-calendar"></i>
          <%= render partial: "events/event_start_at", locals: { event: e } %>
        </div>
        <div class="event-members">
          <i class="class fa fa-user"></i>
          <%= e.members.size %> <%= t("event.member_count") %>
        </div>
      </div>
    </div>
  </li>
  <% end %>
</ul>
<% if user.events.blank? %>
  <div class="message">
    <i class="fa fa-frown-o"></i>
    <%= t("event.no_event") %>
  </div>
<% end %>