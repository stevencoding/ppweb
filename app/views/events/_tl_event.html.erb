<li class="tl-event-item">
  <div class="blue-top-box tl-event-card clearfix">
    <div class="tl-event-orgnizer">
      <%= link_to account_path(e.user.username) do %>
      <%= image_tag e.user.final_avatar_url, :alt => "Your Image", :size => "100x100" %>
      <% end %>
    </div>

    <div class="tl-event-content">
      <h3 class="tl-event-title">
       <%= link_to e.title, "/event/#{e.uid}" %>
      </h3>
      <div class="tl-event-desc"><%= e.description %></div>
      <div class="tl-event-meta">
       <div class="meta">
         <i class="fa fa-calendar"></i>
         <span class="momentjs-time" data-time="<%= e.start.utc.iso8601 %>"></span>
       </div>
       <div class="meta">
         <i class="class fa fa-user"></i>
         <%= e.members.size %> <%= t("event.member_count") %>
       </div>
       <% if e.price.to_f > 0.0 %>
         <div class="meta">
           <i class="fa fa-money"></i>
           <%= e.price + t("rmb") %>
         </div>
       <% else %>
         <div class="meta">
          <i class="fa fa-money"></i>
           <%= t("free") %>
         </div>
       <% end %>
      </div>
    </div>

    <% if e.start < Time.now %>
    <div class="tl-label minibutton red">
      <%= t("event.finished") %>
    </div>
    <% else %>
    <div class="tl-event-created-time">
      <span class="momentjs-time" data-time="<%= e.created_at.utc.iso8601 %>"></span>
    </div>
    <% end %>
  </div>
</li>
