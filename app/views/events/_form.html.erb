<div class="event-form">
  <%= form_for @event do |f| %>
    <div class="boxed-group">
      <h3><%= t("event.create_event") %></h3>
      <div class="boxed-group-inner">
        <% if @event.errors.any? %>
          <div class="form_errorred">
            <%= t("event.form_errors") %>
          </div>
        <% end %>
        <dl class="form">
          <dt><%= f.label :title %></dt>
          <dd><%= f.text_field :title, :class => "short" %></dd>
          <% if @event.errors[:title].any? %>
            <dd class="error"><%= @event.errors[:event][0] %></dd>
          <% end %>
        </dl>
        <dl class="form">
          <dt><%= f.label :price %></dt>
          <dd><%= f.text_field :price, :class => "short" %></dd>
        </dl>
        <dl class="form">
          <dt><%= f.label :published %></dt>
          <dd>
            <% if @event.published? %>
              <%= f.radio_button :published, true, checked: true %> yes
              <%= f.radio_button :published, false %> no
            <% else %>
              <%= f.radio_button :published, true %> yes
              <%= f.radio_button :published, false, checked: true %> no
            <% end %>
          </dd>
        </dl>
        <dl class="form">
          <dt><%= f.label :start_at %></dt>
          <dd><%= f.datetime_select :start_at, ampm: true, :class => "short" %></dd>
        </dl>
        <dl class="form">
          <dt><%= f.label :description %></dt>
          <dd><%= f.text_area :description, :class => "short" %></dd>
        </dl>
        <p>
          <% if controller.action_name == "edit" %>
            <%= f.submit t("event.update_event"), :class => "button primary" %>
          <% else %>
            <%= f.submit t("event.create_event"), :class => "button primary" %>
          <% end %>
          <%= link_to t("event.cancel"), account_path(@event.user.username) %>
        </p>
      </div>
    </div>
  <% end %>
</div>
