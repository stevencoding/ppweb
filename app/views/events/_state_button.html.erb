<% if Time.zone.now > event.start.ago(-7200) %>
  <%= link_to t("event.finished"), "javascript:;", class: "button red" %>
<% else %>
  <% if event.all_members.include? current_user %>
    <%= link_to t("event.have_joined"), "javascript:;", class: "button red" %>
  <% elsif owner?(@event) %>
    <%= link_to t("event.edit_event"), edit_event_path(event.uid), class: "button red" %>
  <% elsif current_user %>
    <%= link_to t('event.join_event') + "（￥" + event.price.to_s + "）", new_order_path + "?uid=#{event.uid}", :class => "button red" %>
  <% else %>
    <%= link_to t("event.join_please_login"), login_path, class: "button red" %>
  <% end %>
<% end %>
