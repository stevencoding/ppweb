<div class="event-member-area">
  <h3 class="event-section-title">
    <%= t('event.attender') %>
    <% if owner?(event) %>
      <%= link_to t("event.invite_friends"), event_invitation_path, class: "event-invitation" %>
    <% end %>
    <span class="email-invite-info"><%= t("event.email_invite", number: event.email_invite.length) %></span>
  </h3>
  <ul class="event-member-list clearfix">
    <% event.all_members.each do |u| %>
      <li class="member-list-item">
        <%= link_to account_path(u.username) do %>
          <%= image_tag u.final_avatar_url%>
        <% end %>
        <%= link_to '@' + u.username, account_path(u.username), class: "member-name" %>
      </li>
    <% end %>
  </ul>
</div>