<div class="container clearfix">
  <div class="profile-card clearfix">
    <div class="avatar">
      <a href="http://gravatar.com">
        <%= image_tag @user.final_avatar_url, :alt => "Your Image", :size => "120x120"%>
      </a>
    </div>
    <div class="name-email">
      <h2><%= @user.username %></h2>
      <p><%= @user.email %></p>
    </div>
    <div class="edit-info">
      <% if logged_in? %>
        <%= link_to t("users.edit_profile"), set_profile_path, class: "button primary" %>
      <% end %>
    </div>
  </div>

  <div class="event-list-wrap clearfix">
    <% if current_user.role == "teacher" || current_user.role == "老师" %>
      <%= link_to t("event.new_event"), new_event_path, class: "new-event-btn button primary"%>
    <% end %>
    <div class="title-wrap">
      <div class="label red">
        <%= t("event.latest_event") %>
      </div>
    </div>
    <ul class="event-list">
      <% @user.events.each do |e| %>
        <li class="event-item">
          <div class="event-card">
            <h3 class="event-title">
              <%= link_to e.title, "/event/#{e.uid}" %>
            </h3>
            <div class="event-details">
              <p><%= e.title %></p>
              <div class="event-time">
                <i class="fa fa-calendar"></i>
                <% if e.start_at.strftime("%P") == 'am' %>
                <%= e.start_at.strftime("%-m月%-d日 上午%l:%M") %>
                <% else %>
                <%= e.start_at.strftime("%-m月%-d日 下午%l:%M") %>
                <% end %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>