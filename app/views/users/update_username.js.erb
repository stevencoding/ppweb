<% if @user.errors[:username].any? %>
  $(".name-error").html('<i class="fa fa-times-circle-o"></i> ');
  $(".name-error").append("<%= @user.errors[:username][0] %>").show();
<% else %>
  $(".name-area").hide();
  $(".name-action").show();
  $(".name-info").html("<%= @user.username %>").show();
  $(".name-error").css("color", "#56bc94");
  $(".name-error").html('<i class="fa fa-check-circle-o"></i> ');
  $(".name-error").append("<%= t("settings.successfully_updated") %>").show();
<% end %>
