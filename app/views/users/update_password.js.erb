<% if @user.errors[:password].any? %>
  $(".pwd-error").html('<i class="fa fa-times-circle-o"></i> ');
  $(".pwd-error").append("<%= @user.errors[:password][0] %>").show();
<% else %>
  $(".pwd-area").hide();
  $(".pwd-action").show();
  $(".pwd-error").css("color", "#56bc94");
  $(".pwd-error").html('<i class="fa fa-check-circle-o"></i> ');
  $(".pwd-error").append("<%= t("settings.successfully_updated") %>").show();
<% end %>