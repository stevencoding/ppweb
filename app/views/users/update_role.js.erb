<% if @user.errors[:role].any? %>
  $(".role-error").html("<%= @user.errors[:role][0] %>").show();
<% else %>
  $(".role-area").hide();
  $(".role-action").show();
  $(".role-info").html("<%= @user.role %>").show();
  $(".role-error").css("color", "#56bc94");
  $(".role-error").html('<i class="fa fa-check-circle-o"></i> ');
  $(".role-error").append("<%= t("settings.successfully_updated") %>").show();
<% end %>