<div class="hero clearfix">
  <div class="slogan">
    <%= t('website.tagline') %>
  </div>
  <div class="teacher-search">
    <%= form_tag search_path, method: 'get' do %>
      <%= text_field_tag :q, params[:q], placeholder: "e.g. Ruby Linux C", autocomplete: "off", class: "teacher-search-input" %>
      <%= submit_tag t("website.search_teacher"), class: "button search-btn" %>
    <% end %>
  </div>
</div>

<div class="features">
  <div class="item">
    <div class="icon animated fadeInUp <%= 'tooltip' if current_user.blank? %>" data-title="<%= t("classroom.sign_in") %>">
      <% path = logged_in? ? "/classroom" : login_path  %>
      <%= link_to path do %>
        <i class="fa fa-users"></i>
      <% end %>
    </div>
    <div class="content">
      <h3 class="join-class <%= 'tooltip' if current_user.blank? %>" data-title="<%= t("classroom.sign_in") %>">
        <%= link_to t("website.enter_classroom"), path %>
      </h3>
      <p><%= t("website.slogan") %></p>
    </div>
  </div>
</div>

<div class="site-updates clearfix">
  <div class="container">
    <div class="lastest-feed">
      <%= render partial: "latest_feed", locals: { events: @events} %>
    </div>
    <% if current_user %>
      <div class="todo">
        <ul class="todo-list">
        <% if current_user.attended_events.blank? %>
          <i class="fa fa-frown-o"></i>
          <%= link_to t("event.no_attended_event"), "javascript:;" %>
        <% elsif @active_attended_events.blank? %>
          <i class="fa fa-frown-o"></i>
          <div class="all-events"><%= link_to t("event.attended_events"), attended_events_path(current_user.username) %></div>
        <% else %>
          <%= render partial: "todo", locals: { attended_events: @active_attended_events } %>
          <div class="all-events"><%= link_to t("event.attended_events"), attended_events_path(current_user.username) %></div>
        <% end %>
        </ul>
      </div>
    <% else %>
      <div class="todo">
        <ul class="todo-list">
          <i class="fa fa-smile-o"></i>
          <%= link_to t("login_to_select_events"), login_path %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
